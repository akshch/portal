<div class="container-fluid" style="background: none; padding-top: 25px; padding-bottom: 45px;">
  <div class="panel panel-default container" style="margin: auto; padding: 0px;">
    <div id="exTab3" class="container-fluid">
      <div class="tab-content clearfix" style="margin-top: -1px;">
        <div class="container-fluid tab-pane active">
          <div class="panel-group" id="accordion">
            <div class="panel-heading">
              <br>
              <p class="h4 text-center">Edit User</p>
              <hr>
            </div>
            <%= bootstrap_form_for @user, :url => {:controller => "users", :action => "update"},multipart: true do |f| %>
              <div class="row background-none">
                <div class="col-12 col-xs-12 col-sm-6">
                  <small>
                    <%= f.text_field :email, label: "Email", class: 'form-control' %>
                  </small>
                </div>
              </div>
              <div class="row background-none">
                <div class="col-12 col-xs-12 col-sm-6">
                  <small>
                    <%= f.text_field :first_name, label: "Firstname", class: 'form-control'%>
                  </small>
                </div>
              </div>
              <div class="row background-none">
                <div class="col-12 col-xs-12 col-sm-12">
                  <small><%= f.select :role, collection: User.roles.keys  %></small>
                </div>
              </div>
              <!--<div class="row background-none">
                      <div class="col-12 col-xs-12 col-sm-12">
                        <small><%= f.select :role, collection: User.roles.keys.to_a, class: "form-control" %></small>
                      </div>
                    </div>-->
              <%= f.submit 'Submit', class: "pull-right btn btn-outline-secondary", style: "font-size:90%; color: #3b0054;" %>
              <br>
              <br>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
   <!-- End of Row -->
