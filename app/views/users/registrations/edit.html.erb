<%else%>

<%= render "webpages/header"%>

<!-- ********** Hero Area Start ********** -->
    <div class="hero-area height-400 bg-img background-overlay" style="background-image: url(../img/blog-img/bg4.jpg);"></div>
    <!-- ********** Hero Area End ********** -->

    <div class="regular-page-wrap section-padding-100">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 col-md-12 col-lg-12">
                    <div class="page-content">
                            <div class="container">
                                    <h5>Edit Profile</h5>
                                      <hr>
                                     <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
                                      <!-- left column -->
                                      <div class="row">
                                      <div class="col-md-3">
                                        <div class="text-center">
                                          <%= image_tag user_avatar(resource, 100), class: "rounded-circle" %>
                                          <%= f.file_field :avatar %>
                                        </div>
                                      </div>
                                      
                                      <!-- edit form column -->
                                      <div class="col-md-9 personal-info">
                                        <h3>Personal info</h3>
                                        
                                          <div class="form-group">
                                            <label class="col-lg-3 control-label">First name:</label>
                                            <div class="col-lg-12">
                                              <%= f.text_field :last_name, hide_label: "Last Name" , autofocus: true %>
                                            </div>
                                          </div>
                                          <div class="form-group">
                                            <label class="col-lg-3 control-label">Last name:</label>
                                            <div class="col-lg-12">
                                              <%= f.text_field :last_name, hide_label: "Last Name" , autofocus: true %>
                                            </div>
                                          </div>
                                         
                                          <div class="form-group">
                                            <label class="col-lg-3 control-label">Email:</label>
                                            <div class="col-lg-12">
                                              <%= f.email_field :email, autofocus: true, hide_label: true, autocomplete: "email" %>
                                            </div>
                                          </div>
                                          <div class="form-group">
                                            <label class="col-md-3 control-label">Password:</label>
                                            <div class="col-md-12">
                                              <%= f.password_field :password, hide_label: true, autocomplete: "off" %>
                                            </div>
                                          </div>
                                          <div class="form-group">
                                            <label class="col-md-3 control-label">Confirm password:</label>
                                            <div class="col-md-12">
                                              <%= f.password_field :password_confirmation, hide_label: true, autocomplete: "off"%>
                                            </div>
                                          </div>
                                          <div class="form-group">
                                                <label class="col-md-3 control-label"> Current Password</label>
                                                <div class="col-md-12">
                                                 <%= f.password_field :current_password, hide_label: true, autocomplete: "off"%>
                                                </div>
                                              </div> 
                                          <div class="form-group">
                                            <label class="col-md-3 control-label"></label>
                                            <div class="col-md-12" style="text-align: right">
                                              <%= f.button  :Submit, :class=>"btn btn-outline-secondary" %>
                                              
                                              <span></span>
                  
                                            </div>
                                          </div>
                                        <% end %>
                                      </div>
                                  </div>
                                </div>
                                <hr>        </div>
                </div>
            </div>
        </div>
    </div>

<%= render  "webpages/footer" %>

<%end%>