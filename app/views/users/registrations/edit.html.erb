<% if current_user.admin? %>

<!--<h2>Edit <%= resource_name.to_s.humanize %></h2>-->
<div class="row vertical-left-row" style="font-size:90%; color: #3b0054; margin: 0px;">
<div class="text-left col-md-12">
<div class="panel panel-default" style="padding: 10px; background-color: white; margin: 10px;
  box-shadow: 0 4px 4px 0 rgba(0, 0, 0, 0.2), 0 4px 4px 0 rgba(0, 0, 0, 0.19);">
<div class="panel-body" style="width: 100%; padding-left: 10px; padding-right: 10px;"> 

<h2 style="padding: 10px; font-size: 200%; color: #3b0054;">Edit Profile</h2>


          <div class="inputForm" style="padding: 10px; padding-top: 0px;  max-width: 500px; ">


<%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.text_field :first_name, label: "First Name" , autofocus: true, class: 'edit-text-field' %>
  </div>
 
  <div class="field">
    <%= f.text_field :last_name, label: "Last Name" , autofocus: true, class: 'edit-text-field' %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, hide_label: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, hide_label: true, autocomplete: "off", class: "edit-text-field" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, hide_label: true, autocomplete: "off", class: "edit-text-field" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <br/>
    <%= f.password_field :current_password, hide_label: true, autocomplete: "off", class: "edit-text-field" %>
  </div>

  <div class="actions">
    <%= f.button  :Submit, :class=>"btn btn-outline-secondary" %>
  </div>
<% end %>

</div>
</div>
</div>
</div>
</div>

